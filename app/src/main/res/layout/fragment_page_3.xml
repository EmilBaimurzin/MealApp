<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_main"
    android:layout_height="match_parent">

    <TextView
        style="@style/BasicText"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f600"
        android:text="Artful Appetites"
        android:layout_marginTop="80dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.meal.game.core.library.CustomImageButton
        android:id="@+id/buttonBack"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_arrow"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.meal.game.core.library.CustomImageButton
        android:id="@+id/buttonForward"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_arrow"
        android:rotationY="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/BasicText"
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_marginHorizontal="45dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f300"
        android:layout_marginTop="15dp"
        android:text="Our menu is a work of art, with exquisite illustrations of each dish, creating a visual feast before the culinary delight even begins."
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_wheel"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>